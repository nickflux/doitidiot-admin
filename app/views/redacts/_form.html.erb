<%= form_for @redact, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Redact</legend>

    <div class="control-group">
      <%= f.label :code_name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :code_name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :sweary, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :sweary, :class => 'optionsCheckbox' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :redact_array, :class => 'control-label' %>
      <div class="controls">
        <%= text_area_tag 'redact[redact_array]', if @redact.new_record? then '' else @redact.redact_array.join("\n") end, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', redacts_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
