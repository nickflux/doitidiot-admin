<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>

	<title>Do It Idiot</title>
	
	<!-- blueprint css -->
	<link rel="stylesheet" href="/stylesheets/blueprint/screen.css" type="text/css" media="screen, projection">
	<link rel="stylesheet" href="/stylesheets/blueprint/print.css" type="text/css" media="print">    
	<!--[if IE]><link rel="stylesheet" href="/stylesheets/blueprint/ie.css" type="text/css" media="screen, projection"><![endif]-->

	<!-- theme -->
	<link rel="stylesheet" href="/stylesheets/print.css" type="text/css" media="screen, projection">
	
	<!-- jQuery -->
	<script src="/javascripts/jquery-1.2.2.pack.js"></script>
	<script src="/javascripts/application.js"></script>
	<script type="text/javascript">
	$(document).ready(function(){
	//JQuery ready is quicker than onload
	$(".stripeMe tr").mouseover(function() {$(this).addClass("over");}).mouseout(function() {$(this).removeClass("over");});
	$(".stripeMe tr:even").addClass("alt");
	});
	</script>

</head>

<body>
	
	<!-- header -->
	<div id="header">
		<div class="container">
			<div class="span-15 prepend-1">
				<h1>Do It Idiot Admin</h1>
			</div>
			<div class="span-7 append-1 last welcome">
			  <%= link_to("users", users_path) %> |
			  <%= link_to("faqs", faqs_path) %> |
			  <%= link_to("redacts", redacts_path) %> |
			  <%= link_to("view site", "http://www.doitidiot.com") %>
			</div>
		</div>
	</div>
	<!-- main -->
	<div class="container">
	  <%= yield %>
	</div>
	<!-- footer -->
	<div class="container">
		<div class="span-22 prepend-1 append-1 footer">
			 <div id="#legals">
				 Copyright 2011 Do It Idiot 
			</div>
		</div>
	</div>

</body>
</html>
